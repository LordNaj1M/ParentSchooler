<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItem1History"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="20dp"
    android:layout_gravity="center"
    app:strokeWidth="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/linTv1History"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitleHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Karakteristik"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tvDateHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sen, 19-12-2023 19:30"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvCtp1History"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="1000 kcal • 2 hr 45 min • 16 portion" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>